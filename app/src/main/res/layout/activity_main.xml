<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.drm.dinodisco.MainActivity">

    <RelativeLayout
            android:layout_width="344dp"
            android:layout_height="495dp" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/trex" android:layout_centerVertical="true"
                android:id="@+id/dinoImage" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:onClick="switchImage"/>
        <TextView
                android:text="Tyrannosaurus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dinoName"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                android:layout_marginBottom="41dp" android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
